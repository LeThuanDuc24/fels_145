<% provide :title, t("views.layouts.users") %>

<center>
  <h1><%= t "views.users.index.all_users" %></h1>
</center>
<div>
  <%= will_paginate %>
  <ul class="list-group">
    <% @users.each do |user| %>
      <li class="list-group-item">
        <%= gravatar_for user %>
        <%= link_to user.name, user %>
        <div class="pull-right" style="margin-top: 20px;">
          <% if !user.is_admin? %>
            <%= button_to t(".delete"), admin_user_path(user), method: :delete,
              class: "btn btn-danger btn-delete",
              data: {confirm: t("views.admin.users.index.confirm_delete")} %>
          <% end %>
        </div>
      </li>
      <br>
    <% end %>
  </ul>
</div>
