<%= form_for [:admin,@category, @word] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.hidden_field :category_id, value: @category.id %>
  <%= f.label :content %>
  </br>
  <%= f.text_field :content %>
  </br>
  <%= f.label :word_answers, t(".answers") %>
  <%= f.fields_for :word_answers do |builder| %>
    <%= render "word_answer_fields", f: builder %>
  <% end %>
  <%= link_to_add_fields t(".add_answers"), f, :word_answers %>
  </br>
  </br>
  <%= f.submit t("views.words.new.add_word"),
    class: "btn btn-primary" %>
<% end %>
