<%= provide :title, t("controllers.categories.list_category") %>
<h1><%= t "controllers.categories.list_category" %></h1>
<br>
<%= will_paginate %>
<ul class="list-group">
  <% @categories.each do |category| %>
    <li class="list-group-item">
      <div class="pull-left" style="font-size:20px;">
        <%= link_to category.name, admin_category_path(category) %>
      </div>
      <% if logged_in? %>
        <div class="center">
          <%= form_tag lessons_path, method: :post do %>
            <%= hidden_field_tag "lesson[category_id]", category.id  %>
            <div class="pull-right">
              <%= submit_tag t("views.lesson.start_lesson"), class: "btn btn-primary" %>
            </div>
            <div class="clearfix"></div>
          <% end %>
        </div>
      <% end %>
    </li>
  <% end %>
</ul>
<%= will_paginate %>
